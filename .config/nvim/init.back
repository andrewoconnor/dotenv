" Vim plug
" https://github.com/junegunn/vim-plug
" ------------------------------------------------------------------------------

call plug#begin()

" Theme
" ------------------------------------------------------------------------------

Plug 'folke/tokyonight.nvim'


" General
" ------------------------------------------------------------------------------

" Whitespace removal
Plug 'ntpeters/vim-better-whitespace'

call plug#end()

" General config
" ------------------------------------------------------------------------------

colorscheme tokyonight

" Enable term 24 bit color
set termguicolors

" Make it obvious where 80 characters is
set colorcolumn=80

" Indent using two spaces
set softtabstop=2
set tabstop=2
set shiftwidth=2

" Use spaces, not tabs
set expandtab

" Don't wrap lines
set nowrap

" Spell check
set spelllang=en

" Line numbers
set number

" Consistent cursor style in tmux
set guicursor=

" Plugin config
" ------------------------------------------------------------------------------

" Shortcut for checking if a plugin is loaded
function! s:has_plugin(plugin)
  let lookup = 'g:plugs["' . a:plugin . '"]'
  return exists(lookup)
endfunction

if s:has_plugin('vim-better-whitespace')
  highlight ExtraWhitespace ctermbg=red guibg = #e06c75
endif
